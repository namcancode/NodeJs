    <title>Login Blog Nodejs</title>
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/font/fontawesomeProByNam.css">
    <!-- Bootstrap core CSS-->

    <link href="/stylesheets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MD BOOTSTRAP PRO -->
